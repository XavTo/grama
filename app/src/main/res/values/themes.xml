<resources>
    <!-- Base application theme. -->
    <style name="Theme.Grama" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/georgia</item>
    </style>

    <style name="GreenTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/teal_200</item>
    </style>
    <style name="RedTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/dark_red</item>
    </style>
    <style name="BigTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>
</resources>